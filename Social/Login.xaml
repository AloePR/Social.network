<Window x:Class="Social.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Social"
        mc:Ignorable="d"
        Title="Login" Height="650" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать!" VerticalAlignment="Center" FontSize="50px" Width="450px" />
        <TextBlock x:Name="log" Text="Введите имя пользователя" VerticalAlignment="Center" Grid.Row="1"/>
    </Grid>
    
</Window>
